<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.safetyfire.monitor.mapper.CarInoutRecordMapper">

    <resultMap id="CarInoutMap" type="com.safetyfire.monitor.domain.entity.CarInoutRecordEntity">
        <id column="id" property="id"/>
        <result column="company_code" property="companyCode"/>
        <result column="license_plate_number" property="licensePlateNumber"/>
        <result column="car_type" property="carType"/>
        <result column="in_out_state" property="inOutState"/>
        <result column="in_out_time" property="inOutTime"/>
        <result column="image_file_id" property="imageFileId"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO car_inout_record (company_code, license_plate_number, car_type, in_out_state, in_out_time, image_file_id, created_at, updated_at)
        VALUES (#{companyCode}, #{licensePlateNumber}, #{carType}, #{inOutState}, #{inOutTime}, #{imageFileId}, NOW(3), NOW(3))
    </insert>

    <select id="listByCompanyCodes" resultMap="CarInoutMap">
        SELECT id, company_code, license_plate_number, car_type, in_out_state, in_out_time, image_file_id
        FROM car_inout_record
        <where>
            <if test="companyCodes != null and companyCodes.size() > 0">
                company_code IN
                <foreach collection="companyCodes" item="c" open="(" separator="," close=")">
                    #{c}
                </foreach>
            </if>
        </where>
        ORDER BY id DESC
        LIMIT #{pageSize} OFFSET #{offset}
    </select>

    <select id="countByCompanyCodes" resultType="long">
        SELECT COUNT(1)
        FROM car_inout_record
        <where>
            <if test="companyCodes != null and companyCodes.size() > 0">
                company_code IN
                <foreach collection="companyCodes" item="c" open="(" separator="," close=")">
                    #{c}
                </foreach>
            </if>
        </where>
    </select>

</mapper>
