<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.safetyfire.monitor.mapper.ProvincialWarningFeedbackMapper">

    <resultMap id="FeedbackMap" type="com.safetyfire.monitor.domain.entity.ProvincialWarningFeedbackEntity">
        <id column="id" property="id"/>
        <result column="external_id" property="externalId"/>
        <result column="feedback" property="feedback"/>
        <result column="status" property="status"/>
        <result column="last_error" property="lastError"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO provincial_warning_feedback (external_id, feedback, status, last_error, created_at, updated_at)
        VALUES (#{externalId}, #{feedback}, #{status}, #{lastError}, NOW(3), NOW(3))
    </insert>

    <select id="list" resultMap="FeedbackMap">
        SELECT id, external_id, feedback, status, last_error
        FROM provincial_warning_feedback
        ORDER BY id DESC
        LIMIT #{pageSize} OFFSET #{offset}
    </select>

    <select id="count" resultType="long">
        SELECT COUNT(1) FROM provincial_warning_feedback
    </select>

</mapper>

